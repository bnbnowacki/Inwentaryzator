<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bartosz.inwentaryzator.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Wczytaj"
        android:id="@+id/ButtonRead"
        android:onClick="onBtnReadClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonRead"
        android:layout_centerHorizontal="true"
        android:id="@+id/ButtonSave"
        android:text="Zapisz"
        android:onClick="onBtnSaveClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ButtonSave"
        android:id="@+id/ButtonStocktaking"
        android:text="Inwentaryzacja"
        android:onClick="onBtnStocktaking"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ButtonStocktaking"
        android:id="@+id/ButtonList"
        android:text="Lista"
        android:onClick="onBtnListClick"/>
</RelativeLayout>
